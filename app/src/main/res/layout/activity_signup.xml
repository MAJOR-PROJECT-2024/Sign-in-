<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">


    <View
        android:id="@+id/top_view"
        android:layout_width="933dp"
        android:layout_height="523dp"
        android:background="@drawable/bg1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-21dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="577dp"
        android:layout_height="110dp"
        android:text="USERNAME"
        android:textSize="50sp"
        android:textStyle="italic"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="1001dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="576dp"
        android:layout_height="91dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="ENTER PASSWORD"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="1134dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="577dp"
        android:layout_height="106dp"
        android:ems="10"
        android:inputType="phone"
        android:text="MOBILE"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="1253dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="106dp"
        android:layout_height="126dp"
        app:srcCompat="@drawable/img_4"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="1233dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="637dp"
        android:layout_height="160dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sign up Now!"
        android:textSize="100sp"
        android:textStyle="italic"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="175dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="507dp"
        android:layout_height="410dp"
        app:srcCompat="@drawable/img_8"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="531dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_9"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="1654dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="111dp"
        android:layout_height="106dp"
        app:srcCompat="@drawable/user"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="975dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="140dp"
        android:layout_height="144dp"
        app:srcCompat="@drawable/img"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="1089dp" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="751dp"
        android:layout_height="312dp"
        app:srcCompat="@drawable/img_7"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="1359dp" />


</android.support.constraint.ConstraintLayout>
