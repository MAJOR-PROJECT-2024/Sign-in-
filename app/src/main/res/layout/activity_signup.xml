<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">


    <View
        android:id="@+id/top_view"
        android:layout_width="933dp"
        android:layout_height="523dp"
        android:background="@drawable/bg1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-21dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="577dp"
        android:layout_height="110dp"
        android:text="USERNAME"
        android:textSize="50sp"
        android:textStyle="italic"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="975dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="576dp"
        android:layout_height="91dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="ENTER PASSWORD"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="1147dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="577dp"
        android:layout_height="106dp"
        android:ems="10"
        android:inputType="phone"
        android:text="MOBILE"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="1300dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="93dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/img_4"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="1300dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="637dp"
        android:layout_height="160dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sign up Now!"
        android:textSize="100sp"
        android:textStyle="italic"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="175dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="433dp"
        android:layout_height="329dp"
        app:srcCompat="@drawable/img_8"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="531dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="96dp"
        android:layout_height="87dp"
        app:srcCompat="@drawable/user"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="975dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="132dp"
        android:layout_height="108dp"
        app:srcCompat="@drawable/img"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="1130dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="447dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/img_9"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="1578dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="390dp"
        android:layout_height="95dp"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="1593dp" />


</android.support.constraint.ConstraintLayout>
